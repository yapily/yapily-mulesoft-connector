      "enum": [
        "INITIATE_PRE_AUTHORISATION",
        "INITIATE_PRE_AUTHORISATION_ACCOUNTS",
        "INITIATE_PRE_AUTHORISATION_PAYMENTS",
        "INITIATE_ACCOUNT_REQUEST",
        "INITIATE_EMBEDDED_ACCOUNT_REQUEST",
        "ACCOUNT_REQUEST_DETAILS",
        "ACCOUNTS",
        "ACCOUNT",
